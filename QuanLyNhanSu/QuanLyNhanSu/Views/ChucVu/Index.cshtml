@model IEnumerable<QuanLyNhanSu.Models.ChucVu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách chức vụ</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDChucVu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenChucVu)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDChucVu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenChucVu)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TenPB }) |
            @Html.ActionLink("Details", "Details", new { id=item.TenPB }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TenPB })
        </td>
    </tr>
}

</table>
